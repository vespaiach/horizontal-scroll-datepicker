{
    "name": "horizontal-datepicker",
    "version": "1.0.0",
    "description": "Infinity horizontal scrolling calendar",
    "source": "src/index.tsx",
    "main": "dist/datepicker.js",
    "module": "dist/datepicker.esm.js",
    "umd:main": "dist/datepicker.umd.js",
    "unpkg": "dist/datepicker.umd.js",
    "exports": {
        ".": {
            "require": "./dist/datepicker.js",
            "import": "./dist/datepicker.esm.js",
            "umd": "./dist/datepicker.umd.js"
        },
        "./dist/defaultTheme.css": "./dist/defaultTheme.css",
        "./dist/datepicker.css": "./dist/datepicker.css"
    },
    "scripts": {
        "clean": "rimraf dist",
        "tsc": "tsc ./src/index.tsx --jsx react --declaration --emitDeclarationOnly --outfile ./dist/datepicker.bundle.d.ts",
        "dev": "webpack serve -c webpack.dev.config.js",
        "style": "postcss --use autoprefixer --use postcss-minify -d dist ./src/*.css",
        "build": "npm run clean && microbundle --jsx React.createElement --css-modules false && npm run style"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vespaiach/horizontal-scroll-datepicker.git"
    },
    "keywords": [
        "datepicker",
        "infinity scroll",
        "react",
        "horizontal"
    ],
    "author": "nta.toan@gmail.com",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/vespaiach/horizontal-scroll-datepicker/issues"
    },
    "homepage": "https://github.com/vespaiach/horizontal-scroll-datepicker#readme",
    "devDependencies": {
        "@babel/core": "^7.18.2",
        "@babel/preset-env": "^7.18.2",
        "@babel/preset-react": "^7.17.12",
        "@babel/preset-typescript": "^7.17.12",
        "@types/react": "^18.0.10",
        "@types/react-dom": "^18.0.5",
        "babel-loader": "^8.2.5",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.7.1",
        "css-minimizer-webpack-plugin": "^4.0.0",
        "html-webpack-plugin": "^5.5.0",
        "microbundle": "^0.15.0",
        "mini-css-extract-plugin": "^2.6.0",
        "postcss": "^8.4.14",
        "postcss-cli": "^9.1.0",
        "postcss-minify": "^1.1.0",
        "react-dom": "^17.0.0",
        "rimraf": "^3.0.2",
        "style-loader": "^3.3.1",
        "typescript": "^4.7.2",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.9.1"
    },
    "peerDependencies": {
        "@use-gesture/react": ">=10.2.15",
        "classnames": ">=2.3.1",
        "react": ">=17.0.0"
    }
}
